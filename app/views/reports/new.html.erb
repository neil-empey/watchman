<h1 style="color:DarkBlue;"><center>New Community Report</center></h1>
<% render partial: 'layouts/errors', locals: {object: @report} %>
<body style="margin:300;padding:0, color:DarkBlue;">
  <%= simple_form_for @report do |f| %>
    <%= f.input :first_name, label: 'First Name', hint: 'legal name', error: 'first name required' %>
    <%= f.input :last_name, label: 'Last Name', error: 'last name required' %>
    <%= f.input :address, label: 'Address', error: 'address required' %>
    <%= f.input :telephone_number, label: 'Telephone Number', error: 'telephone number required' %>
    <%= f.input :incident_date, label: 'Incident Date' %>
    <%= f.input :summary, label: 'Please describe event, loss, damage' %>
    <%= f.input :suspect_data, label: 'Select Suspects', hint: 'choose best', collection: @user.images.collect {|pic| pic.url} %>
    <%= f.input :vehicle_data, label: 'Select Vehicles', hint: 'choose best', collection: @user.vehicles.collect {|car| car.url} %>
    <h4 style="color:DarkBlue"><%= f.button :submit %></h4>
    <% end %>

</body>
